{
    "name": "phithi92/typed-env",
    "description": "Typed .env loader with schema validation for PHP",
    "autoload": {
        "psr-4": {
            "Phithi92\\TypedEnv\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Phithi92\\TypedEnv\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.1"
    },
    "scripts": {
        "test": "XDEBUG_MODE=off php vendor/bin/phpunit -c config/phpunit.xml",
        
        "lint": "php vendor/bin/parallel-lint src",
        "cs:check": "php vendor/bin/phpcs --standard=PSR12 src",
        "cs:fix": "php vendor/bin/phpcbf --standard=PSR12 -q src || exit 0",
        
        "analyse": "php vendor/bin/phpstan analyse -c config/phpstan.neon --memory-limit=1G",
        "insights": "php vendor/bin/phpinsights analyse -c config/phpinsights.php",
        "insights:fix": "php vendor/bin/phpinsights fix -c config/phpinsights.php --quiet",
        
        "fix": [
            "@cs:fix",
            "@insights:fix"
          ],
          "qa": [
            "@cs:check",
            "@analyse",
            "@test"
          ]
    },
    "require-dev": {
        "nunomaduro/phpinsights": "^2.13",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^12.3",
        "phpstan/phpstan-strict-rules": "^2.0",
        "php-parallel-lint/php-parallel-lint": "^1.4"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
